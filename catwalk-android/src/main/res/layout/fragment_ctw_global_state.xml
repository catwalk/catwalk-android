<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <TextView
        android:id="@+id/tv_assistant_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:text="Coisas que eu posso ajudar você"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_global_state_options"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_assistant_title">

        <Button
            android:id="@+id/btn_global_see_trending_items"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/ctwlk_genie_default_button"
            android:text="ver tendências"
            android:textAllCaps="false"
            android:textColor="@color/menuButtonFontColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_global_create_look"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ctwlk_genie_default_button"
            android:text="montar um look"
            android:textAllCaps="false"
            android:textColor="@color/menuButtonFontColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_global_ask_something"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ctwlk_genie_default_button"
            android:text="perguntar algo"
            android:textAllCaps="false"
            android:textColor="@color/menuButtonFontColor"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>